@startuml
'https://plantuml.com/class-diagram

'Personer her
rectangle Users {
    class Producer {
        - email : String
        - name : String
        - image : String
        --
        + Producer(id)
        --
        + getName() : String
        + getEmail() : String
        + getImage(): String
        + validatePassword(String) : boolean
    }

    class CompanyAdministrator {
        - company: Company
    }

    class SystemAdministrator {

    }
}

CompanyAdministrator -|> Producer
SystemAdministrator -|> CompanyAdministrator

'Naeste
class Company {
    - regNo : int
    - name : String
    - manager : String
    --
    + getRegNo() : int
    + getName() : String
    + getManager() : String
}

class Channel {
    - name: String
    - category: String
    --
    + getName() : String
    + getCategory() : String
}

class Program {
    - title: String
    -startTime: long
    -endTime: long
    --
    + getTitle() : String
}

Channel "1" --> "1..*" Program :"Has >"

class CreditRole {
    - title : String
}

Program "1" -> "1..*" CreditRole : "Has >"

class Credit {
    - name : String
    - role : CreditRole
    - date : OffsetDateTime
    --
    + getName() : String
    + getRole() : CreditRole
    + getDate() : OffsetDateTime
}

'Controller
class AuthController {
    --
    + resetPassword() : String
    + validateLogin() : Producer
}

Producer "1" -> "1..*" Program : "Has >"

CompanyAdministrator --> Channel : "Administers >"

'Statics
class DB {
}

DB "1" --> "1..*" Producer : "Contains >"

Producer --> AuthController : "Authenticates <"

CompanyAdministrator --> Company : "Administers >"

Credit "1" --> "1..*" CreditRole : "Has >"

@enduml
